# Saudi Arabia Taekwondo Analytics - Environment Configuration
# Copy this file to .env and fill in your values

# ===== ALERT SYSTEM =====
# Get SendGrid API key from https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email addresses to receive alerts (comma-separated)
ALERT_EMAILS=coach@example.com,analyst@example.com,manager@example.com

# Email address to send from
FROM_EMAIL=analytics@saudi-taekwondo.com

# Enable/disable alerts
ALERTS_ENABLED=true

# ===== ALERT THRESHOLDS =====
# Alert when ranking changes by more than this number
RANKING_CHANGE_THRESHOLD=5

# Alert when opportunity score is above this threshold (0-100)
OPPORTUNITY_SCORE_THRESHOLD=75

# ===== DATA QUALITY =====
# Maximum age of data before considering it stale (days)
MAX_DATA_AGE_DAYS=7

# Minimum quality score to accept data (0-100)
MIN_QUALITY_SCORE=70

# ===== SCRAPING CONFIGURATION =====
# Start year for historical data collection
SCRAPE_START_YEAR=2020

# Maximum number of competitions to scrape per run
MAX_COMPETITIONS_PER_RUN=50

# Delay between requests (seconds) - be nice to servers
SCRAPE_DELAY_SECONDS=1.0

# ===== ANALYSIS SETTINGS =====
# Recent form window (days)
RECENT_FORM_DAYS=180

# Countries to benchmark against (comma-separated)
RIVAL_COUNTRIES=KOR,IRI,JOR,TUR,CHN,GBR,FRA,MEX,UAE,THA

# ===== FUTURE: DATABASE (Optional) =====
# DATABASE_URL=postgresql://user:password@localhost:5432/taekwondo

# ===== FUTURE: GRACENOTE API (Optional) =====
# GRACENOTE_API_KEY=your_gracenote_key

# ===== AZURE BLOB STORAGE (Required for GitHub Actions) =====
# Get from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net

# Force local data (skip Azure) - set to true for local development
# FORCE_LOCAL_DATA=true

# ===== SLACK NOTIFICATIONS (Optional) =====
# Get webhook URL from Slack App settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===== FUTURE: CLOUD DEPLOYMENT (Optional) =====
# AZURE_SUBSCRIPTION_ID=
# AZURE_RESOURCE_GROUP=

# ===== DEBUG =====
# Enable verbose logging
DEBUG=false

# Save raw HTML for debugging
SAVE_RAW_HTML=false
